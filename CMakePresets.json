{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 22,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "x64-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      }
    },
    {
      "name": "x64-windows-base",
      "inherits": "x64-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "x64-debug",
      "displayName": "x64 Debug Windows",
      "hidden": false,
      "inherits": "x64-windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "LLVM_ROOT": ""
      }
    },
    {
      "name": "x64-release",
      "displayName": "x64 Release Windows",
      "inherits": "x64-windows-base",
      "hidden": false,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "LLVM_ROOT": ""
      }
    },
    {
      "name": "x64-linux-base",
      "inherits": "x64-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "x64-linux-debug",
      "displayName": "x64 Debug Linux",
      "hidden": false,
      "inherits": "x64-linux-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "LLVM_ROOT": ""
      }
    },
    {
      "name": "x64-linux-release",
      "displayName": "x64 Release Linux",
      "hidden": false,
      "inherits": "x64-linux-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "LLVM_ROOT": ""
      }
    }
  ]
}